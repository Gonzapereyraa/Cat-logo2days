---
import Layout from '../layouts/Layout.astro';
import BannerCarousel from '../components/BannerCarousel.astro';
import CategoriesSection from '../components/CategoriesSection.astro';
import BestsellersSection from '../components/BestsellersSection.astro';
import FeaturesSection from '../components/FeaturesSection.astro';
import CartSidebar from '../components/CartSidebar.astro';
import { productos } from '../data/bestsellers.js';
import { categories, getCategoriesFromProducts } from '../data/categories.js';

// Get unique categories from products for filters
const productCategories = getCategoriesFromProducts(productos);
---

<Layout title="Catálogo Digital - Tu tienda online">
  <!-- Barra de herramientas de administración -->
  <div id="adminToolbar" class="admin-toolbar hidden">
    <div class="container mx-auto flex flex-wrap justify-between items-center">
      <div class="flex items-center space-x-4">
        <i class="fas fa-tools text-yellow-400"></i>
        <span class="font-bold">Modo Edición Activo</span>
        <span class="text-sm opacity-75 hidden md:block">Haz clic en cualquier elemento para editarlo</span>
      </div>
      <div class="flex items-center space-x-2 md:space-x-4">
        <button id="saveAllBtn" class="bg-green-600 hover:bg-green-700 px-3 py-2 rounded-lg transition text-sm">
          <i class="fas fa-save mr-1"></i><span class="hidden md:inline">Guardar</span>
        </button>
        <button id="addProductBtn" class="bg-blue-600 hover:bg-blue-700 px-3 py-2 rounded-lg transition text-sm">
          <i class="fas fa-plus mr-1"></i><span class="hidden md:inline">Producto</span>
        </button>
        <button id="templateBtn" class="bg-purple-600 hover:bg-purple-700 px-3 py-2 rounded-lg transition text-sm">
          <i class="fas fa-palette mr-1"></i><span class="hidden md:inline">Plantilla</span>
        </button>
        <button id="exitEditBtn" class="bg-red-600 hover:bg-red-700 px-3 py-2 rounded-lg transition text-sm">
          <i class="fas fa-times mr-1"></i><span class="hidden md:inline">Salir</span>
        </button>
      </div>
    </div>
  </div>

  <div class="flex-1 container mx-auto px-4 py-8">
    <!-- Header -->
    <header class="flex justify-between items-center mb-8 glass-card p-4 rounded-lg">
      <div class="flex items-center space-x-3">
        <i class="fas fa-store text-indigo-400 text-2xl"></i>
        <h1 id="headerTitle" class="text-2xl md:text-3xl font-bold editable" data-field="siteTitle">Tu Catálogo Digital</h1>
      </div>
      <div class="flex items-center space-x-4">
        <a href="#catalogView" id="viewCatalogBtn" class="hidden md:flex px-4 py-2 bg-white text-indigo-600 rounded-lg font-medium hover:bg-gray-100 transition">Catálogo</a>
        
        <button id="loginBtn" class="p-2 rounded-full hover:bg-white hover:bg-opacity-20 transition" title="Panel de Administración">
          <i class="fas fa-user-shield text-xl"></i>
        </button>
        
        <div class="relative">
          <button id="cartButton" class="p-2 rounded-full hover:bg-white hover:bg-opacity-20 transition" title="Carrito de Compras">
            <i class="fas fa-shopping-cart text-xl"></i>
            <span id="cartCount" class="absolute -top-1 -right-1 bg-red-500 text-white text-xs font-bold rounded-full h-5 w-5 flex items-center justify-center hidden">0</span>
          </button>
        </div>
      </div>
    </header>

    <!-- Hero Section -->
    <section class="glass-card p-6 md:p-8 rounded-lg text-center mb-10 fade-in">
      <h2 id="heroTitle" class="text-2xl md:text-4xl font-bold mb-4 editable" data-field="heroTitle">Bienvenido a tu Catálogo Digital</h2>
      <p id="heroSubtitle" class="mb-6 text-base md:text-lg text-gray-300 editable" data-field="heroSubtitle">Explora productos, filtra por categorías y gestiona tu catálogo online fácilmente.</p>
      <a href="#catalogView" id="heroCatalogBtn" class="inline-flex items-center px-6 py-3 bg-indigo-600 text-white rounded-xl font-medium hover:bg-indigo-700 transition shadow-lg">
        <i class="fas fa-eye mr-2"></i>Ver Catálogo
      </a>
    </section>

    <!-- Banner Carousel -->
    <BannerCarousel />

    <!-- Categories Section -->
    <CategoriesSection />

    <!-- Bestsellers Section -->
    <BestsellersSection />

    <!-- Features Section -->
    <FeaturesSection />

    <!-- Catalog View -->
    <div id="catalogView">
      <!-- Filtros -->
      <div id="filtersContainer" class="glass-card p-4 md:p-6 rounded-lg mb-8">
        <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4">
          <div class="w-full md:w-1/3">
            <div class="relative">
              <input type="text" id="searchInput" placeholder="Buscar productos..." class="w-full px-4 py-2 pl-10 rounded-lg bg-white bg-opacity-20 border border-white border-opacity-30 focus:outline-none focus:ring-2 focus:ring-indigo-500">
              <i class="fas fa-search absolute left-3 top-3 text-gray-300"></i>
            </div>
          </div>
          <div class="w-full md:w-1/3">
            <select id="categoryFilter" class="w-full px-4 py-2 rounded-lg bg-white bg-opacity-20 border border-white border-opacity-30 focus:outline-none focus:ring-2 focus:ring-indigo-500">
              <option value="">Todas las categorías</option>
              {productCategories.map((category) => (
                <option value={category}>{category}</option>
              ))}
            </select>
          </div>
          <div class="w-full md:w-1/3">
            <select id="sortFilter" class="w-full px-4 py-2 rounded-lg bg-white bg-opacity-20 border border-white border-opacity-30 focus:outline-none focus:ring-2 focus:ring-indigo-500">
              <option value="">Ordenar por</option>
              <option value="priceAsc">Precio: Menor a Mayor</option>
              <option value="priceDesc">Precio: Mayor a Menor</option>
              <option value="nameAsc">Nombre: A-Z</option>
              <option value="nameDesc">Nombre: Z-A</option>
              <option value="recent">Más Recientes</option>
            </select>
          </div>
        </div>
      </div>

      <div id="productsContainer" class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
        {productos.map((product) => (
          <div 
            class="product-card glass-card rounded-xl overflow-hidden hover:scale-105 transition-all duration-300 group"
            data-category={product.categoria}
            data-price={product.precio}
            data-name={product.nombre}
            key={product.id}
          >
            <div class="relative">
              <img 
                src={product.imagen} 
                alt={product.nombre}
                class="w-full h-48 object-cover group-hover:scale-110 transition-transform duration-500"
              />
              {product.oferta && (
                <div class="absolute top-2 left-2 bg-red-500 text-white px-2 py-1 rounded-full text-xs font-bold">
                  OFERTA
                </div>
              )}
            </div>
            
            <div class="p-4">
              <h3 class="font-bold text-lg text-white mb-2 line-clamp-2">{product.nombre}</h3>
              <p class="product-description text-sm text-gray-300 mb-4 line-clamp-3">{product.descripcion}</p>
              
              <div class="flex items-center justify-between mb-4">
                <span class="text-xl font-bold text-white">${product.precio.toFixed(2)}</span>
                <span class="text-sm text-gray-400 bg-white bg-opacity-10 px-2 py-1 rounded">
                  {product.categoria}
                </span>
              </div>
              
              <button 
                class="add-to-cart-btn w-full bg-indigo-600 hover:bg-indigo-700 text-white py-2 px-4 rounded-lg transition-colors duration-300 flex items-center justify-center space-x-2"
                data-product-id={product.id}
                data-product={JSON.stringify(product)}
              >
                <i class="fas fa-shopping-cart"></i>
                <span>Añadir al Carrito</span>
              </button>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>

  <!-- Cart Sidebar -->
  <CartSidebar />

  <!-- Modal de Login -->
  <div id="loginModal" class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50 hidden">
    <div class="bg-white bg-opacity-10 backdrop-blur-lg rounded-xl p-6 md:p-8 w-full max-w-md mx-4 shadow-2xl">
      <div class="text-center mb-6 md:mb-8">
        <i class="fas fa-shield-alt text-3xl md:text-4xl text-white mb-4"></i>
        <h2 class="text-2xl md:text-3xl font-bold text-white">Panel de Administración</h2>
        <p class="text-gray-300 mt-2 text-sm md:text-base">Ingresa tus credenciales para editar el catálogo</p>
      </div>
      
      <form id="loginForm" class="space-y-4 md:space-y-6">
        <div>
          <label for="username" class="block text-sm font-medium text-gray-300 mb-2">Usuario</label>
          <div class="relative">
            <i class="fas fa-user absolute left-3 top-3 text-gray-400"></i>
            <input type="text" id="username" name="username" required 
                   class="w-full pl-10 pr-4 py-3 bg-white bg-opacity-20 border border-white border-opacity-30 rounded-lg text-white placeholder-gray-300 focus:outline-none focus:ring-2 focus:ring-indigo-500"
                   placeholder="Ingresa tu usuario">
          </div>
        </div>
        
        <div>
          <label for="password" class="block text-sm font-medium text-gray-300 mb-2">Contraseña</label>
          <div class="relative">
            <i class="fas fa-lock absolute left-3 top-3 text-gray-400"></i>
            <input type="password" id="password" name="password" required 
                   class="w-full pl-10 pr-4 py-3 bg-white bg-opacity-20 border border-white border-opacity-30 rounded-lg text-white placeholder-gray-300 focus:outline-none focus:ring-2 focus:ring-indigo-500"
                   placeholder="Ingresa tu contraseña">
          </div>
        </div>
        
        <div id="loginError" class="hidden bg-red-500 bg-opacity-20 border border-red-500 text-red-200 px-4 py-3 rounded-lg text-sm">
          <i class="fas fa-exclamation-triangle mr-2"></i>
          <span>Credenciales incorrectas</span>
        </div>
        
        <div class="flex space-x-3">
          <button type="submit" class="flex-1 bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-3 px-4 rounded-lg transition duration-300">
            <i class="fas fa-sign-in-alt mr-2"></i>Entrar
          </button>
          <button type="button" id="cancelLogin" class="flex-1 bg-gray-600 hover:bg-gray-700 text-white font-bold py-3 px-4 rounded-lg transition duration-300">
            <i class="fas fa-times mr-2"></i>Cancelar
          </button>
        </div>
      </form>
    </div>
  </div>

  <!-- Modal de Edición de Texto -->
  <div id="textEditModal" class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50 hidden">
    <div class="bg-white rounded-lg p-6 w-full max-w-md mx-4">
      <h3 class="text-lg font-bold mb-4 text-gray-800">
        <i class="fas fa-edit mr-2"></i>Editar Contenido
      </h3>
      <div class="space-y-4">
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Contenido:</label>
          <textarea id="textEditInput" rows="4" class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-indigo-500 text-gray-800"></textarea>
        </div>
        <div class="flex space-x-3">
          <button id="saveTextEdit" class="flex-1 bg-indigo-600 hover:bg-indigo-700 text-white py-2 rounded-lg">
            <i class="fas fa-save mr-2"></i>Guardar
          </button>
          <button id="cancelTextEdit" class="flex-1 bg-gray-500 hover:bg-gray-600 text-white py-2 rounded-lg">
            <i class="fas fa-times mr-2"></i>Cancelar
          </button>
        </div>
      </div>
    </div>
  </div>

  <!-- Footer -->
  <footer class="text-center py-6 mt-10 border-t border-white border-opacity-30">
    <p id="footerText" class="text-sm editable" data-field="footerText">&copy; 2025 Catálogo Digital. Todos los derechos reservados.</p>
    <div class="flex justify-center space-x-4 mt-2 text-lg">
      <a href="#" class="hover:text-indigo-400 transition"><i class="fab fa-facebook"></i></a>
      <a href="#" class="hover:text-indigo-400 transition"><i class="fab fa-instagram"></i></a>
      <a href="#" class="hover:text-indigo-400 transition"><i class="fab fa-whatsapp"></i></a>
      <a href="#" class="hover:text-indigo-400 transition"><i class="fab fa-twitter"></i></a>
    </div>
  </footer>

  <script>
    document.addEventListener('DOMContentLoaded', async () => {
      try {
        const mainModule = await import('../scripts/main.js');
        
        // Manejar botones de añadir al carrito para todos los productos
        document.querySelectorAll('.add-to-cart-btn').forEach(button => {
          button.addEventListener('click', (e) => {
            const productData = JSON.parse(e.currentTarget.dataset.product);
            mainModule.addToCart(productData, 1);
            
            // Feedback visual
            const originalText = e.currentTarget.innerHTML;
            e.currentTarget.innerHTML = '<i class="fas fa-check"></i> <span>¡Añadido!</span>';
            e.currentTarget.classList.add('bg-green-600');
            
            setTimeout(() => {
              e.currentTarget.innerHTML = originalText;
              e.currentTarget.classList.remove('bg-green-600');
            }, 1500);
          });
        });
      } catch (error) {
        console.error('Error initializing product handlers:', error);
      }
    });
  </script>
</Layout>