---
import { banners, carouselConfig } from '../data/banners.js';

const activeBanners = banners.filter(banner => banner.activo)
  .sort((a, b) => a.orden - b.orden);
---

{activeBanners.length > 0 && (
  <section class="relative overflow-hidden rounded-xl mb-8 h-96">
    <div id="bannerCarousel" class="relative w-full h-full">
      {activeBanners.map((banner, index) => (
        <div 
          class={`carousel-slide absolute inset-0 ${index === 0 ? 'active' : ''}`}
          key={banner.id}
        >
          <div 
            class="w-full h-full bg-cover bg-center bg-no-repeat"
            style={`background-image: url('${banner.imagen}')`}
          >
            <!-- Overlay oscuro para mejor legibilidad -->
            <div class="absolute inset-0 bg-black bg-opacity-40"></div>
            
            <!-- Contenido del banner -->
            <div class="relative z-10 flex items-center justify-center h-full text-center text-white px-4">
              <div class="max-w-3xl">
                <h2 class="text-3xl md:text-5xl font-bold mb-4 animate__animated animate__fadeInUp">
                  {banner.titulo}
                </h2>
                <p class="text-lg md:text-xl mb-6 text-gray-200 animate__animated animate__fadeInUp animate__delay-1s">
                  {banner.subtitulo}
                </p>
                {banner.boton && (
                  <a 
                    href={banner.boton.enlace}
                    class="inline-flex items-center px-8 py-3 bg-indigo-600 hover:bg-indigo-700 text-white font-semibold rounded-lg transition-all duration-300 transform hover:scale-105 animate__animated animate__fadeInUp animate__delay-2s"
                  >
                    {banner.boton.texto}
                    <i class="fas fa-arrow-right ml-2"></i>
                  </a>
                )}
              </div>
            </div>
          </div>
        </div>
      ))}
    </div>
  </section>
)}

<script>
  document.addEventListener('DOMContentLoaded', async () => {
    try {
      const carouselModule = await import('../scripts/carousel.js');
      const bannersModule = await import('../data/banners.js');
      
      const carousel = document.getElementById('bannerCarousel');
      if (carousel) {
        carouselModule.initCarousel('bannerCarousel', bannersModule.carouselConfig);
      }
    } catch (error) {
      console.error('Error initializing carousel:', error);
    }
  });
</script>

<style>
  .carousel-slide {
    opacity: 0;
    transition: opacity 0.5s ease-in-out;
  }
  
  .carousel-slide.active {
    opacity: 1;
    display: block;
  }
  
  /* Animaciones para el contenido del banner */
  .animate__animated {
    animation-duration: 1s;
    animation-fill-mode: both;
  }
  
  .animate__fadeInUp {
    animation-name: fadeInUp;
  }
  
  .animate__delay-1s {
    animation-delay: 0.5s;
  }
  
  .animate__delay-2s {
    animation-delay: 1s;
  }
  
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translate3d(0, 40px, 0);
    }
    to {
      opacity: 1;
      transform: translate3d(0, 0, 0);
    }
  }
</style>