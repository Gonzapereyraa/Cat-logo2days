---
// Características/features del negocio
const features = [
  {
    icon: "fas fa-shipping-fast",
    title: "Envío Gratis",
    description: "En compras superiores a $100",
    color: "text-green-400"
  },
  {
    icon: "fas fa-undo",
    title: "Cambios y Devoluciones",
    description: "30 días para cambios sin costo",
    color: "text-blue-400"
  },
  {
    icon: "fas fa-credit-card",
    title: "Pago Seguro",
    description: "Múltiples métodos de pago",
    color: "text-yellow-400"
  },
  {
    icon: "fas fa-headset",
    title: "Soporte 24/7",
    description: "Atención al cliente siempre disponible",
    color: "text-purple-400"
  }
];
---

<section class="mb-12">
  <div class="text-center mb-8">
    <h2 class="text-2xl md:text-3xl font-bold text-white mb-4">¿Por qué elegirnos?</h2>
    <p class="text-gray-300">Ofrecemos la mejor experiencia de compra</p>
  </div>
  
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
    {features.map((feature, index) => (
      <div 
        class="feature-card glass-card rounded-xl p-6 text-center hover:scale-105 transition-all duration-300 group"
        style={`animation-delay: ${index * 0.1}s`}
        key={index}
      >
        <div class="mb-4">
          <i class={`${feature.icon} text-4xl ${feature.color} group-hover:scale-110 transition-transform duration-300`}></i>
        </div>
        <h3 class="font-bold text-lg text-white mb-2">{feature.title}</h3>
        <p class="text-sm text-gray-300">{feature.description}</p>
      </div>
    ))}
  </div>
</section>

<style>
  .feature-card {
    background: rgba(255, 255, 255, 0.05);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.1);
    animation: fadeInUp 0.6s ease-out forwards;
    opacity: 0;
    transform: translateY(30px);
  }
  
  .feature-card:hover {
    background: rgba(255, 255, 255, 0.1);
    border-color: rgba(255, 255, 255, 0.2);
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
  }
  
  @keyframes fadeInUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  /* Intersection Observer Animation */
  .feature-card.animate {
    animation: fadeInUp 0.6s ease-out forwards;
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    // Intersection Observer para animaciones
    const observer = new IntersectionObserver((entries) => {
      entries.forEach((entry) => {
        if (entry.isIntersecting) {
          entry.target.classList.add('animate');
        }
      });
    }, {
      threshold: 0.1
    });

    document.querySelectorAll('.feature-card').forEach((card) => {
      observer.observe(card);
    });
  });
</script>